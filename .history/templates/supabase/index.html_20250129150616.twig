{% extends 'base.html.twig' %}

{% block body %}
    <h1>Données de la table : {{ table }}</h1>

    {% if data is not empty %}
        <table>
            <thead>
                <tr>
                    {% for column, value in data[0] %}
                        <th>{{ column }}</th>
                    {% endfor %}
                </tr>
            </thead>
            <tbody>
                {% for row in data %}
                    <tr>
                        {% for value in row %}
                            <td>{{ value }}</td>
                        {% endfor %}
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p>Aucune donnée disponible pour cette table.</p>
    {% endif %}
{% endblock %}
